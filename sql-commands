create database webProducts;
use webProducts;
SHOW TABLES;

create table products(
Id int,
Name varchar(50),
Category varchar(50),
Price int,
Date varchar(50)
);

create table usuario(
CODUSUARIO int,
NOMBRE varchar(50),
EDAD int,
DIRECCION varchar(100),
TELEFONO char(15),
DNI char(10),
FECHA_NAC date,
USUARIO varchar(10),
CLAVE varchar(10),
TIPO_USUARIO varchar(20),
ESTADO varchar(11)
);

create table students(
IdEstudiante int,
NOMBRE varchar(50),
NOTA int, 
ESTADO varchar(50)
);


